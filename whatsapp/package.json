{
  "name": "dexa-whatsapp",
  "version": "1.0.0",
  "description": "DeXa Hedera Last Mile Access payments bot for Hedera (EVM) settled transfers",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "tsx src/index.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "compile:hedera": "node scripts/compileUserRegistry.js",
    "deploy:hedera": "node scripts/deployUserRegistry.js"
  },
  "keywords": [
    "hedera",
    "whatsapp",
    "payments",
    "twilio",
    "prisma"
